# Logging Configuration for Meshtastic Mesh Monitor
#
# Copy this file to .env or set these environment variables
# to configure logging behavior across the application.

# ======================
# LOG LEVEL CONFIGURATION
# ======================
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG for detailed output
# Production: INFO for normal operation
# Testing: WARNING for minimal output
LOG_LEVEL=INFO

# ======================
# LOG FORMAT CONFIGURATION
# ======================
# Customize the log message format
# Available placeholders:
#   %(asctime)s - timestamp
#   %(name)s - logger name
#   %(levelname)s - log level
#   %(filename)s - source file
#   %(lineno)d - line number
#   %(funcName)s - function name
#   %(message)s - log message

# Development format (detailed)
#LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(filename)s:%(lineno)d - %(funcName)s() - %(message)s

# Production format (clean)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Simple format (minimal)
#LOG_FORMAT=%(levelname)s: %(message)s

# ======================
# FILE LOGGING
# ======================
# Enable or disable file logging
LOG_TO_FILE=true

# Log file path (auto-generates timestamp if not specified)
# For Docker: /data/mesh_monitor_YYYYMMDD_HHMMSS.log
# For local: ./logs/mesh_monitor_YYYYMMDD_HHMMSS.log
# Custom: /path/to/your/logfile.log
#LOG_FILE_PATH=/data/mesh_monitor.log

# Maximum size of each log file (in bytes)
# 10MB = 10485760, 50MB = 52428800, 100MB = 104857600
LOG_FILE_MAX_SIZE=10485760

# Number of backup log files to keep
LOG_FILE_BACKUP_COUNT=5

# ======================
# CONSOLE LOGGING
# ======================
# Enable or disable console output
LOG_CONSOLE=true

# ======================
# DOCKER CONFIGURATION
# ======================
# Set this to true when running in Docker container
# (usually auto-detected)
#DOCKER_CONTAINER=true

